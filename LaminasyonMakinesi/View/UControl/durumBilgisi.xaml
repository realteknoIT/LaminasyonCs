<UserControl
    x:Class="LaminasyonMakinesi.View.UControl.durumBilgisi"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:LaminasyonMakinesi.View.UControl"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Width="200"
    Height="100"
    mc:Ignorable="d">
    <Border
        Margin="0,0,0,0"
        Background="#7F000000"
        BorderBrush="{DynamicResource {x:Static SystemColors.MenuHighlightBrushKey}}"
        BorderThickness="1"
        CornerRadius="5">

        <Grid>

            <TextBlock
                x:Name="icerik"
                Margin="0,10,0,0"
                HorizontalAlignment="Center"
                VerticalAlignment="Top"
                FontSize="13"
                FontWeight="Bold"
                Foreground="White"
                Text="İçerik" />
            <Border
                Height="50"
                Margin="10,38,10,10"
                Background="#7D6479EF"
                CornerRadius="5" />
            <Label
                x:Name="statusLabel"
                Width="150"
                Margin="0,50,0,0"
                HorizontalAlignment="Center"
                VerticalAlignment="Top"
                Content="Buffer Durum Bilgisi"
                FontWeight="BOLD" />
        </Grid>
    </Border>
</UserControl>
