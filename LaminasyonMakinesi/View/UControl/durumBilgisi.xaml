<UserControl x:Class="LaminasyonMakinesi.View.UControl.durumBilgisi"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:LaminasyonMakinesi.View.UControl"
             mc:Ignorable="d" Width="200" Height="100">
    <Border Margin="0,0,0,0" CornerRadius="5" Background="#7F000000" BorderThickness="1" BorderBrush="{DynamicResource {x:Static SystemColors.MenuHighlightBrushKey}}">
        
        <Grid>

            <TextBlock x:Name="icerik" Text="İçerik" Margin="0,10,0,0" VerticalAlignment="Top" HorizontalAlignment="Center" Foreground="White" FontSize="13" FontWeight="Bold"/>
            <Border Height="50" Background="#7D6479EF" CornerRadius="5" Margin="10,38,10,10"/>
            <Label x:Name="statusLabel" Content="Buffer Durum Bilgisi" FontWeight="BOLD"  HorizontalAlignment="Center" Margin="0,50,0,0" VerticalAlignment="Top" Width="150"/>
        </Grid>
    </Border>
</UserControl>
