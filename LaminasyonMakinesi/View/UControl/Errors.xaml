                        <Ellipse
                            x:Name="path3"
                            Canvas.Left="53"
                            Canvas.Top="82.5"
                            Width="18"
                            Height="18"
                            Fill="DarkOrange" />
                    </Canvas>
                </Viewbox>

                <TextBlock
                    x:Name="baslik"
                    Grid.Row="0"
                    Grid.Column="1"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    FontSize="13"
                    FontWeight="Bold"
                    Foreground="White"
                    Text="Program Açılırken Bazı Hatalar Oluştu."
                    TextWrapping="Wrap" />
                <TextBlock
                    x:Name="textBlock"
                    Grid.Row="1"
                    Grid.Column="1"
                    Margin="0,0,10,10"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Bottom"
                    Foreground="White"
                    Text="&gt;&gt;&gt;"
                    TextWrapping="Wrap" />
