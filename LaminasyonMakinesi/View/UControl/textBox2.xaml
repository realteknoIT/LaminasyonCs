<UserControl x:Class="LaminasyonMakinesi.View.UControl.textBox2"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:LaminasyonMakinesi.View.UControl"
             mc:Ignorable="d">
    <Border Margin="0,0,0,0" CornerRadius="5" Background="#7F000000" BorderThickness="1" BorderBrush="{DynamicResource {x:Static SystemColors.MenuHighlightBrushKey}}">
        <Grid>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition></ColumnDefinition>
                    <ColumnDefinition></ColumnDefinition>
                </Grid.ColumnDefinitions>
                <TextBlock Grid.Column="0" x:Name="deger" Text="10" Margin="0,0,2,0" VerticalAlignment="Center" HorizontalAlignment="Right" Foreground="White" FontSize="13" FontWeight="Bold"/>
                <TextBlock Grid.Column="1" x:Name="birim" Text="m/dk" Margin="2,0,3,0" VerticalAlignment="Center" HorizontalAlignment="Left" Foreground="White" FontSize="13" FontWeight="Bold"/>
            </Grid>
        </Grid>
    </Border>
</UserControl>
