<Page
    x:Class="LaminasyonMakinesi.View.DogSarma"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="clr-namespace:LaminasyonMakinesi.View.UControl"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:LaminasyonMakinesi.View"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="Kumas"
    d:DesignHeight="960"
    d:DesignWidth="1920"
    Background="Transparent"
    mc:Ignorable="d">

    <Grid>
        <Grid.Background>
            <ImageBrush
                ImageSource="/View/images/dogsarma.png"
                Opacity="0.5"
                Stretch="Uniform" />
        </Grid.Background>

        <controls:onOff
            x:Name="lbl_onOffBtn"
            Title="Kesici Bıçak"
            Width="200"
            Height="100"
            Margin="760,198,960,462"
            TextBlock.TextAlignment="Center" />

        <controls:UpDownTextbox
            x:Name="lbl_asagiYukari"
            Title="Aşağı Yukarı"
            Height="100"
            Margin="1221,170,126,590"
            ArrowLeftClicked="lbl_asagiYukari_ArrowLeftClicked_1"
            ArrowRightClicked="lbl_asagiYukari_ArrowRightClicked_1"
            NumPadClicked="lbl_asagiYukari_NumPadClicked_1"
            Unit="mm"
            Value="0" />
    </Grid>
</Page>
